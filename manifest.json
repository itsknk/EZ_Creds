{
  "name": "EZ Creds",
  "version": "0.0",
  "manifest_version": 2,
  "description": "Generate passwords for websites based on one master password and their URLS.",
  "icons": {
    "16": "icons/16x16.png",
    "19": "icons/19x19.png",
    "32": "icons/32x32.png"  
  },
  "permissions": ["activeTab", "storage"],
  "browser_action": {
    "default_icon": {
      "16": "icons/16x16.png",
      "19": "icons/19x19.png",
      "32": "icons/32x32.png"
    },
    "default_title": "EZ Creds",
    "default_popup": "generate.html"
  },
  "options_page": "options.html",
  "background": {
    "scripts": ["js/storage.js"],
    "persistent": true
  }
}
